{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run DKP server",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "justMyCode": true,     // toggle to also debug library code
      "args": ["run", "src/dkp/01_overview.py"],
      "console": "integratedTerminal"
    },
    {
      "name": "All tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceFolder}/tests", "--capture=no"],
      "console": "integratedTerminal"
    }
  ]
}
